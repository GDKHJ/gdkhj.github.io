---
const {
  title,
  href,
  tags = [],
  thumb = "",      // public/ 기준 절대경로 e.g. "/images/p1.jpg"
  summary = "",
} = Astro.props;
---
<article class="card">
  <a class="thumb-wrap" href={href} aria-label={title}>
    {thumb
      ? <img class="thumb" src={thumb} alt={title} loading="lazy" />
      : <div class="thumb placeholder"><div class="bar" /></div>}
  </a>
  <div class="card-body">
    <h3 class="card-title"><a href={href}>{title}</a></h3>
    {summary && <p class="card-summary">{summary}</p>}
    {tags.length > 0 && (
      <div class="tags">
        {tags.map((t) => <span class="tag">{t}</span>)}
      </div>
    )}
  </div>
</article>
