---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectCard from "../../components/ProjectCard.astro";

/** 여기에 카드 데이터만 추가하면 자동으로 렌더됨 */
const projects = [
  {
    title: "Mimic",
    href: "/project/Mimic",   // 상세 페이지 파일과 연결
    tags: ["Unity", "2D", "PC"],
    thumb: "/mimic_thumbnail.png",
    summary: "Unity로 만든 뱀서라이크",
  },
  {
    title: "Rising Hero",
    href: "/project/Rising_Hero",
    tags: ["Unity", "2D", "Mobile"],
    thumb: "",
    summary: "달토끼 키우기 클론코딩",
  },
  // 필요한 만큼 추가...
