---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectCard from "../../components/ProjectCard.astro";

/** 여기에 카드 데이터만 추가하면 자동으로 렌더됨 */
const projects = [
  {
    title: "Mimic",
    href: "/project/Mimic",   // 상세 페이지 파일과 연결
    tags: ["Unity", "2D", "PC"],
    thumb: "/mimic_thumbnail.png",
    summary: "Unity로 만든 뱀서라이크",
  },
  {
    title: "Rising Hero",
    href: "/project/RisingHero",
    tags: ["Unity", "2D", "Mobile"],
    thumb: "/risinghero_thumbnail.png",  // 필요 시 썸네일 이미지 추가
    summary: "달토끼 키우기 클론코딩",
  },
  {
    title: "Vangry Bird",
    href: "/project/VangryBird",  // 방금 만든 페이지 파일과 연결
    tags: ["Unity", "VR", "Multiplayer"],
    thumb: "/vangry_thumbnail.png",      // public/Image/ 쪽에 올려둔 대표 이미지
    summary: "VR Angry Birds 스타일 멀티플레이 프로토타입",
  },
  // 필요한 만큼 추가...
];
---

<BaseLayout title="Projects · 권혁준" heroTitle="Projects" heroSub="대표 작업과 기술 포인트" />

<main class="container">
  <section class="section">
    <div class="grid-cards">
      {projects.map((p) => <ProjectCard {...p} />)}
    </div>
  </section>
</main>
